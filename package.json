{
  "name": "gotea",
  "version": "1.0.0",
  "private": true,
  "description": "gotea front development tools configuration",
  "author": "Kazuki Kamizuru",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "lint": "run-p -c lint:* && prettier --check resources/assets",
    "lint:scripts": "eslint --ext .ts,.vue ./resources/assets/scripts",
    "lint:styles": "stylelint \"./resources/assets/styles/**/*.scss\" \"./resources/assets/scripts/**/*.vue\"",
    "format": "run-p -c format:* && prettier --write resources/assets",
    "format:scripts": "npm run lint:scripts -- --fix",
    "format:styles": "npm run lint:styles -- --fix",
    "test": "jest",
    "prod": "vite build"
  },
  "main": "resources/scripts/main.ts",
  "dependencies": {
    "axios": "^1.4.0",
    "dayjs": "^1.11.8",
    "pikaday": "^1.8.2",
    "vue": "^3.2.47",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^16.18.34",
    "@types/pikaday": "^1.7.6",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/compiler-sfc": "^3.2.45",
    "@vue/test-utils": "^2.3.2",
    "@vue/vue3-jest": "^29.2.4",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-vue": "^9.11.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^3.2.4",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-stylelint": "^4.3.0",
    "vue-eslint-parser": "^9.3.0"
  },
  "engines": {
    "node": ">=16.16 <17"
  },
  "license": "MIT"
}

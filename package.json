{
  "name": "gotea",
  "version": "1.0.0",
  "private": true,
  "description": "gotea front development tools configuration",
  "author": "Kazuki Kamizuru",
  "scripts": {
    "lint": "run-p -c lint:*",
    "dev": "npm run webpack -- --mode development -w",
    "format": "run-p -c format:*",
    "format:scripts": "npm run lint:scripts -- --fix",
    "format:styles": "npm run lint:styles -- --fix",
    "lint:scripts": "eslint --ext .ts,.vue ./resources/assets/scripts",
    "lint:styles": "stylelint \"./resources/assets/styles/**/*.scss\" \"./resources/assets/scripts/**/*.vue\"",
    "prod": "npm run webpack -- --mode production",
    "webpack": "webpack --config=./webpack.config.js"
  },
  "main": "resources/scripts/main.ts",
  "dependencies": {
    "axios": "^0.21.4",
    "dayjs": "^1.10.4",
    "pikaday": "^1.7.0",
    "vue": "^3.2.19",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@types/node": "^12.0.0",
    "@types/pikaday": "^1.6.5",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@vue/compiler-sfc": "^3.2.19",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.17.0",
    "eslint-webpack-plugin": "^3.2.0",
    "fibers": "^5.0.0",
    "mini-css-extract-plugin": "^2.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.3.2",
    "sass": "^1.39.0",
    "sass-loader": "^12.1.0",
    "sass-resources-loader": "^2.2.4",
    "style-loader": "^3.3.1",
    "stylelint": "^14.6.0",
    "stylelint-bare-webpack-plugin": "^2.1.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.3.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-scss": "^4.3.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.4.2",
    "vue-eslint-parser": "^7.11.0",
    "vue-loader": "16.5.0",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-remove-empty-scripts": "^0.8.1"
  },
  "engines": {
    "node": ">=14 <15"
  },
  "license": "MIT"
}

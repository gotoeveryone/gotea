{
  "name": "igoapp",
  "version": "1.0.0",
  "description": "igoapp front development tools configuration",
  "main": "index.js",
  "scripts": {
    "sass": "npm run sass-prod -- -w",
    "sass-prod": "node-sass ./resources/assets/sass/app.scss -o ./webroot/css/ --output-style compressed",
    "webpack": "webpack -w --colors --config=./webpack.config.js",
    "webpack-prod": "cross-env NODE_ENV=production webpack -p --colors --config=./webpack.config.js",
    "dev": "npm-run-all -p sass webpack",
    "prod": "npm-run-all -p sass-prod webpack-prod"
  },
  "author": "Kazuki Kamizuru",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@angular/common": "^4.1.3",
    "@angular/compiler": "^4.1.3",
    "@angular/core": "^4.1.3",
    "@angular/forms": "^4.1.3",
    "@angular/http": "^4.1.3",
    "@angular/platform-browser": "^4.1.3",
    "@angular/platform-browser-dynamic": "^4.1.3",
    "buble": "^0.15.2",
    "buble-loader": "^0.4.1",
    "core-js": "^2.4.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.0",
    "ts-loader": "^2.1.0",
    "typescript": "^2.3.3",
    "vue": "^2.3.3",
    "vue-loader": "^12.2.0",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.6.1",
    "zone.js": "^0.8.11"
  },
  "devDependencies": {
    "@angular/cli": "^1.0.6",
    "@angular/compiler-cli": "^4.1.3",
    "sass-lint": "^1.10.2"
  }
}

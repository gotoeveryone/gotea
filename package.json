    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.3",
    "ts-loader": "5.2.1",
    "typescript": "^3.3.3333",
    "vue": "^2.5.17",
    "vue-eslint-parser": "^6.0.2",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.17",
    "vuex": "^3.0.1",

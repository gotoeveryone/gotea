{
  "name": "gotea",
  "version": "1.0.0",
  "private": true,
  "description": "gotea front development tools configuration",
  "author": "Kazuki Kamizuru",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "lint": "run-p -c lint:* && prettier --check resources/assets",
    "lint:scripts": "eslint --ext .ts,.vue ./resources/assets/scripts",
    "lint:styles": "stylelint \"./resources/assets/styles/**/*.scss\" \"./resources/assets/scripts/**/*.vue\"",
    "format": "run-p -c format:* && prettier --write resources/assets",
    "format:scripts": "npm run lint:scripts -- --fix",
    "format:styles": "npm run lint:styles -- --fix",
    "prod": "vite build"
  },
  "main": "resources/scripts/main.ts",
  "dependencies": {
    "axios": "^0.27.2",
    "dayjs": "^1.11.5",
    "pikaday": "^1.7.0",
    "vue": "^3.2.37",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.58",
    "@types/pikaday": "^1.6.5",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.32.0",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/compiler-sfc": "^3.2.39",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-vue": "^9.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "sass": "^1.54.8",
    "stylelint": "^14.12.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.8.2",
    "vite": "^3.1.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-stylelint": "^3.0.7",
    "vue-eslint-parser": "^9.1.0"
  },
  "engines": {
    "node": ">=16.16 <17"
  },
  "license": "MIT"
}

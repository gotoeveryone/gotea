{
  "name": "gotea",
  "version": "1.0.0",
  "private": true,
  "description": "gotea front development tools configuration",
  "author": "Kazuki Kamizuru",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "lint": "run-p -c lint:* && prettier --check resources/assets",
    "lint:scripts": "eslint --ext .ts,.vue ./resources/assets/scripts",
    "lint:styles": "stylelint \"./resources/assets/styles/**/*.scss\" \"./resources/assets/scripts/**/*.vue\"",
    "format": "run-p -c format:* && prettier --write resources/assets",
    "format:scripts": "npm run lint:scripts -- --fix",
    "format:styles": "npm run lint:styles -- --fix",
    "prod": "vite build"
  },
  "main": "resources/scripts/main.ts",
  "dependencies": {
    "axios": "^0.21.4",
    "dayjs": "^1.10.4",
    "pikaday": "^1.7.0",
    "vue": "^3.2.37",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^14.18.23",
    "@types/pikaday": "^1.6.5",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/compiler-sfc": "^3.2.19",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-vue": "^9.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.3.2",
    "sass": "^1.54.1",
    "stylelint": "^14.6.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.3.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vite-plugin-eslint": "^1.7.0",
    "vite-plugin-stylelint": "^3.0.6",
    "vue-eslint-parser": "^7.11.0"
  },
  "engines": {
    "node": ">=14.18.0 <15"
  },
  "license": "MIT"
}

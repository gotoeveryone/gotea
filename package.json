{
  "name": "gotea",
  "version": "1.0.0",
  "private": true,
  "description": "gotea front development tools configuration",
  "author": "Kazuki Kamizuru",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "lint": "run-p -c lint:* && prettier --check resources/assets",
    "lint:scripts": "eslint --ext .ts,.vue ./resources/assets/scripts",
    "lint:styles": "stylelint \"./resources/assets/styles/**/*.scss\" \"./resources/assets/scripts/**/*.vue\"",
    "format": "run-p -c format:* && prettier --write resources/assets",
    "format:scripts": "npm run lint:scripts -- --fix",
    "format:styles": "npm run lint:styles -- --fix",
    "test": "vitest",
    "prod": "vite build"
  },
  "main": "resources/scripts/main.ts",
  "dependencies": {
    "axios": "^1.6.5",
    "dayjs": "^1.11.10",
    "pikaday": "^1.8.2",
    "vue": "^3.3.4",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.17.18",
    "@types/pikaday": "^1.7.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/test-utils": "^2.4.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-vue": "^9.19.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.1.1",
    "sass": "^1.69.7",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^5.3.2",
    "typescript": "^5.3.3",
    "vite": "^3.2.7",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-stylelint": "^5.3.1",
    "vitest": "^1.1.3",
    "vue-eslint-parser": "^9.3.2"
  },
  "engines": {
    "node": ">=18 <19"
  },
  "license": "MIT"
}

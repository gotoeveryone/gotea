{
  "name": "gotea",
  "version": "1.0.0",
  "description": "gotea front development tools configuration",
  "main": "resources/scripts/main.ts",
  "engines": {
    "node": ">=14 <15"
  },
  "scripts": {
    "webpack": "webpack --colors --config=./webpack.config.js",
    "dev": "npm run webpack -- --mode development -w",
    "prod": "npm run webpack -- --mode production -p",
    "lint": "run-p lint:*",
    "lint:scripts": "eslint --ext .ts,.vue ./resources/assets/scripts",
    "lint:styles": "stylelint \"./resources/assets/styles/**/*.scss\" \"./resources/assets/scripts/**/*.vue\"",
    "format": "run-p format:*",
    "format:scripts": "npm run lint:scripts -- --fix",
    "format:styles": "npm run lint:styles -- --fix"
  },
  "author": "Kazuki Kamizuru",
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@types/node": "^12.0.0",
    "@types/pikaday": "^1.6.5",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "axios": "^0.21.1",
    "css-loader": "^4.2.2",
    "dayjs": "^1.10.4",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-typescript": "^2.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^7.9.0",
    "eslint-webpack-plugin": "^2.5.4",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mini-css-extract-plugin": "^0.11.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.5",
    "pikaday": "^1.7.0",
    "prettier": "^1.16.4",
    "sass-loader": "^10.0.2",
    "sass-resources-loader": "^2.1.0",
    "style-loader": "^1.2.1",
    "stylelint": "^13.7.0",
    "stylelint-bare-webpack-plugin": "^2.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.5.3",
    "ts-loader": "5.2.1",
    "typescript": "^3.3.3333",
    "vue": "^2.5.17",
    "vue-eslint-parser": "^7.6.0",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.17",
    "vuex": "^3.0.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-fix-style-only-entries": "^0.5.1"
  }
}

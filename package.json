{
  "name": "gotea",
  "version": "1.0.0",
  "description": "gotea front development tools configuration",
  "main": "resources/scripts/main.ts",
  "engines": {
    "node": ">=8 <11"
  },
  "scripts": {
    "webpack": "webpack --colors --config=./webpack.config.js",
    "dev": "yarn run webpack --mode development -w",
    "prod": "yarn run webpack --mode production -p",
    "lint": "yarn run eslint && yarn run stylelint",
    "lint:fix": "yarn run eslint:fix && yarn run stylelint:fix",
    "eslint": "eslint --ext .ts,.vue ./resources/assets/scripts",
    "eslint:fix": "yarn run eslint --fix",
    "stylelint": "stylelint \"./resources/assets/styles/**/*.scss\" \"./resources/assets/scripts/**/*.vue\"",
    "stylelint:fix": "yarn run stylelint --fix"
  },
  "author": "Kazuki Kamizuru",
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "devDependencies": {
